<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleManagementActivity">

    <ScrollView
        android:fillViewport="true"
        android:id="@+id/rchaospk9kvu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:elevation="8dp"
        android:clipChildren="false"
        android:clipToPadding="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@drawable/logo_col"
                >

                <ImageView
                    android:id="@+id/rb4w0yzz0t6"
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/shuttle_logo"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/rbvbgc5w13gk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFFFF"
                android:paddingTop="27dp"
                android:paddingBottom="13dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="76dp"
                    android:orientation="horizontal"
                    android:background="@drawable/logo_col">



                    <Button
                        android:id="@+id/datePickerButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Select Date"
                        android:textColor="@color/black"
                        android:background="@android:color/transparent"
                        />




                </LinearLayout>


                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="76dp"
                    android:orientation="horizontal"
                    android:background="@drawable/logo_col">



                    <Button
                        android:id="@+id/timePickerButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Select Time"
                        android:textColor="@color/black"
                        android:background="@android:color/transparent"
                        />




                </LinearLayout>



                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="76dp"
                    android:orientation="horizontal"
                    android:background="@drawable/logo_col">

                <Spinner
                    android:id="@+id/busSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="76dp"
                    android:orientation="horizontal"
                    android:background="@drawable/logo_col">

                    <Spinner
                        android:id="@+id/directionSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="76dp"
                    android:orientation="horizontal"
                    android:background="@drawable/logo_col">



                    <Button
                        android:id="@+id/submitButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Submit Schedule"
                        android:textColor="@color/black"
                        android:background="@android:color/transparent"
                        />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="76dp"
                    android:orientation="horizontal"
                    android:background="@drawable/logo_col">



                    <Button
                        android:id="@+id/backButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Back"
                        android:textColor="@color/black"
                        android:background="@android:color/transparent"
                        />




                </LinearLayout>







            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>