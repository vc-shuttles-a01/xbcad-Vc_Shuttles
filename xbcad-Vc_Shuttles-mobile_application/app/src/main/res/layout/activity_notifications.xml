                android:text="Notification Preferences:"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkbox_booking_updates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking Updates"
                    android:textColor="@android:color/white" />

                <CheckBox
                    android:id="@+id/checkbox_schedule_changes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Schedule Changes"
                    android:textColor="@android:color/white" />

                <CheckBox
                    android:id="@+id/checkbox_general_announcements"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="General Announcements"
                    android:textColor="@android:color/white" />
            </LinearLayout>


            <Button
                android:id="@+id/savePreferencesButton"
                android:layout_width="wrap_content"
