<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminReportsActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Logo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@drawable/logo_col"
                android:gravity="center">

                <ImageView
                    android:id="@+id/logoImageView"
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/shuttle_logo"
                    android:contentDescription="Logo" />
            </LinearLayout>

            <!-- Title -->
            <TextView
                android:id="@+id/reportTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Admin Reports"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginVertical="16dp" />

            <!-- Chart Section -->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/ridershipBarChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:id="@+id/legendContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginTop="16dp" />



            <!-- RecyclerView for Detailed Reports -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reportsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:clipToPadding="false"
                android:scrollbars="vertical" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
