<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- working code -->

    <!-- Input for User Email -->
    <EditText
        android:id="@+id/userEmailEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter User's Email"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/text_in_design"
        android:paddingVertical="18dp"
        android:paddingHorizontal="11dp"/>

    <!-- Input for User Password -->
    <EditText
        android:id="@+id/userPasswordEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter User's Password"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/userEmailEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/text_in_design"
        android:paddingVertical="18dp"
        android:paddingHorizontal="11dp"/>


    <!-- Button to Assign User Role styled like the landing page buttons -->
    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/logo_col"
        app:layout_constraintTop_toBottomOf="@id/userPasswordEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/addUserButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add User"
            android:textColor="@color/black"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnLayout2"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/logo_col"
        app:layout_constraintTop_toBottomOf="@id/btnLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/viewRequestsButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="View Signup Requests"
            android:textColor="@color/black"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <!-- TextView for Help Text -->
    <TextView
        android:id="@+id/txtHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Long Press to Delete"
        app:layout_constraintTop_toBottomOf="@id/btnLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- ListView to Display User Emails -->
    <ListView
        android:id="@+id/userEmailsListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/txtHelp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
